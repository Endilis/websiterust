# Кэширование HTML - короткий срок для частых обновлений
/*.html
  Cache-Control: public, max-age=300, must-revalidate
  
# Кэширование изображений - долгий срок
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Кэширование CSS/JS с версионированием - 1 минута для моментальных обновлений
/*.css
  Cache-Control: public, max-age=60, must-revalidate
  
/*.js
  Cache-Control: public, max-age=60, must-revalidate

# Корневые файлы
/
  Cache-Control: public, max-age=300, must-revalidate
