# HTML без кэширования - мгновенные обновления
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
# Кэширование изображений - долгий срок
/images/*
  Cache-Control: public, max-age=31536000, immutable

# CSS/JS без кэширования - мгновенные обновления при F5
/*.css
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
/*.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Корневые файлы
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
